			var txt = $(this).closest('.view-issue-field.editable-field.inactive').children('span.user-hover').text().trim();
			$(frm).closest("form").attr("id",($(frm).closest("form").attr("id")+Math.floor((Math.random() * 100) + 1))).removeClass('hidden');
			
